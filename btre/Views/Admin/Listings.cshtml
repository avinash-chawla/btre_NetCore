@model IEnumerable<btre.Models.Listing>

@{
    ViewData["Title"] = "Listings";
}

<div class="container">
    <a asp-action="CreateListing" class="btn btn-success m-2">Create New</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPublished)
                </th>
                <th>
                    Realtor
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.IsPublished)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Realtor.Name)
                    </td>
                    <td>
                        <a asp-action="EditListing" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="js-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{ 
    <script>
        $(document).ready(function () {
            $(".js-delete").on('click', function () {
                if (confirm("Are you sure you want to delete this data")) {
                    console.log("Deleted");
                }
            });
        });
    </script>
}
